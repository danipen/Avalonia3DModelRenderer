<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia3DModelRenderer.MainWindow"
        Title="Avalonia3DModelRenderer">
    <DockPanel>
        <Button x:Name="mBrowseButton" DockPanel.Dock="Top">Browse...</Button>
        <Grid ColumnDefinitions="* Auto *">
            <DockPanel Grid.Column="0">
                <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="4" x:Name="mOpenGlControlContainer" Padding="0 0 1 1"/>
            </DockPanel>
            <GridSplitter Grid.Column="1" />
            <TextBox x:Name="mContextTextBox" Grid.Column="2"/>
        </Grid>
    </DockPanel>
</Window>
